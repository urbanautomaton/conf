#!/usr/bin/env bash

set -euo pipefail

branch=${1:-""};

if [[ -z "${branch}" ]]; then
  echo "Error: branch name not given" >&2 && exit 1
fi

if git config "branch.${branch}.remote" >/dev/null; then
  merge=$(git config "branch.${branch}.merge")
  remote_branch=${merge##*/}
  git push origin --delete "${remote_branch}"
fi

git branch -D "${branch}"
